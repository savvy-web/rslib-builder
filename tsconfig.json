{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "./src/public/tsconfig/ecma/lib.json",
	"include": [
		"${configDir}/types/*.ts",
		"${configDir}/package.json",
		"${configDir}/*.ts",
		"${configDir}/*.cts",
		"${configDir}/*.mts",
		"${configDir}/src/**/*.ts",
		"${configDir}/src/**/*.tsx",
		"${configDir}/src/**/*.cts",
		"${configDir}/src/**/*.mts",
		"${configDir}/lib/**/*.ts",
		"${configDir}/lib/**/*.tsx",
		"${configDir}/lib/**/*.cts",
		"${configDir}/lib/**/*.mts",
		"${configDir}/src/public/**/*.json"
	]
}
